<?php

$temperature = 25; 
$conversion_type = "C_to_F";  // Can be "C_to_F" or "F_to_C"

if ($conversion_type == "C_to_F") {
    $converted_temp = ($temperature * 9/5) + 32;
    echo "{$temperature}째C is equal to {$converted_temp}째F.";
}

elseif ($conversion_type == "F_to_C") {
    $converted_temp = ($temperature - 32) * 5/9;
    echo "{$temperature}째F is equal to {$converted_temp}째C.";
}

else {
    echo "Invalid conversion type.";
}

?>

